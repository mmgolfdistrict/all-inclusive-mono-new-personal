{
  "name": "golf-district-platform",
  "version": "1.0.0",
  "description": "",
  "keywords": [],
  "license": "ISC",
  "author": "",
  "main": "index.js",
  "workspaces": [
    "apps/*",
    "packages/*",
    "tooling/*",
    "infura/*"
  ],
  "scripts": {
    "build": "turbo run build && node ./apps/web/script/generateRevision.js",
    "clean:workspaces": "turbo clean",
    "compile": "turbo run compile",
    "dev": "dotenv -- turbo dev --parallel --filter=golf-district-platforms",
    "dev:tunnel": "dotenv -- turbo dev --parallel",
    "devbuild": "( export QSTASH_CURRENT_SIGNING_KEY='sig_XYZ' && export QSTASH_NEXT_SIGNING_KEY='sig_XYZ' && turbo run build )",
    "format": "prettier --write \"**/*.{js,jsx,ts,tsx,md,css}\" && npm run build ",
    "lint": "turbo run lint --max-warning=0",
    "pre-commit": "lint-staged",
    "prettier-check": "prettier --check \"**/*.{js,jsx,ts,tsx,md,css}\" --ignore-path .prettierignore",
    "revision": "node ./revision/generateRevision.js && node ./revision/route.js",
    "start": "npm run dev",
    "test": "turbo run test",
    "typecheck": "turbo typecheck"
  },
  "husky": {
    "hooks": {
      "format": "npm run format"
    }
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx,md,css}": [
      "eslint --fix",
      "prettier --write"
    ]
  },
  "dependencies": {
    "@juspay-tech/react-hyper-js": "^1.0.2",
    "dotenv-cli": "^7.3.0",
    "express": "^4.19.2",
    "prettier": "^2.8.8",
    "turbo": "^1.12.4",
    "typescript": "^5.2.2"
  },
  "devDependencies": {
    "@commitlint/cli": "^19.6.1",
    "@commitlint/config-conventional": "^19.6.0",
    "@next/bundle-analyzer": "^14.2.11",
    "commitlint-plugin-function-rules": "^3.1.0",
    "cross-env": "^7.0.3",
    "eslint": "^8.45.0",
    "eslint-config-custom": "*",
    "husky": "^7.0.4",
    "lint-staged": "^13.2.3"
  },
  "packageManager": "npm@9.8.0",
  "engines": {
    "node": ">=20"
  }
}
