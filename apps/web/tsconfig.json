{
  "extends": "@golf-district/tsconfig/nextjs.json",
  "compilerOptions": {
    "target": "ES2020", // or ES2017 or higher
    "module": "ESNext", // allows top-level await
    "moduleResolution": "Node",
    "isolatedModules": true,
    "jsx": "preserve",
    "types": [
      "vitest/globals",
      "node"
    ],
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "strictNullChecks": true,
    "baseUrl": ".",
    "paths": {
      "~/*": [
        "./src/*"
      ]
    }
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts",
    "next-config.mjs",
    "postcss.config.cjs",
    ".eslintrc.cjs"
  ],
  "exclude": [
    "node_modules"
  ]
}
